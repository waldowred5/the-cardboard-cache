<p id="notice"><%= notice %></p>

<h1>Board Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board_games.each do |board_game| %>
      <tr>
        <td><%= "#{board_game.name}" %></td>
        <td><%= link_to 'Show', board_game %></td>
      </tr>
    <% end %>
  </tbody>
</table>
